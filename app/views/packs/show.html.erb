<h3 class="page-header"> Редактирование колоды </h3>
<div style="text-align: left;">
    <%= button_to 'Установить основной', set_pack_path(@pack), class: "btn btn-default" %>
</div>
<div style="text-align: right;">
    <%= link_to 'Удалить колоду', pack_path(@pack), method: :delete, class: "btn btn-default alert-danger" %>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
	          <th>Текст</th>
	          <th>Перевод</th>
	          <th>Дата проверки</th>
	          <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        <% @pack.cards.each_with_index do |card, index| %>
            <tr>
                <th scope="row"><%= index+1 %></th>
		            <td><%= link_to card.original_text, edit_card_path(card) %></td>
		            <td><%= card.translated_text %></td>
		            <td><%= card.review_date.nil? ? '-' : card.review_date.to_time.strftime("%d/%m/%Y") %></td>
		            <td><%= link_to 'Удалить', card_path(card), method: :delete %></td>
            </tr>
        <% end  %>
    </tbody>
</table>
