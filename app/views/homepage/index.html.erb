<% if @card.blank? %>
    <h3>Нет карточек для учебы. <%= link_to 'Добавьте', new_card_path, class: "btn-link" %> несколько</h3>
<% else %>
  <div class="media">
    <div class="media-left">
        <%= image_tag @card.picture.url if @card.picture? %>
    </div>
    <div class="media-body">
        <h4 class="media-heading">Тренировка карточек</h4>
        <%= render partial: "cards/trainform" %>
    </div>
  </div>
<% end %>
