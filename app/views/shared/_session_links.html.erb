<div style="text-align: left;">
    <% if logged_in? %>
        <%= t('.currently')%><%= current_user.email %> |

        <% if current_user.has_linked_twitter? %>
            <%= link_to t('.unlink_twitter'), home_delete_oauth_path('twitter'), method: :delete %>
        <% else %>
            <%= link_to t('.link_twitter'), home_auth_at_provider_path(:provider => :twitter) %>
        <% end %> |
        <% if current_user.has_linked_facebook? %>
            <%= link_to t('.unlink_facebook'), home_delete_oauth_path('facebook'), method: :delete %>
        <% else %>
            <%= link_to t('.link_facebook'), home_auth_at_provider_path(:provider => :facebook) %>
        <% end %> |

        <%= link_to t('.logout'), home_logout_path %>
    <% else %>
        <%= link_to t('.login_twitter'), home_auth_at_provider_path(provider: :twitter) %> |
        <%= link_to t('.login_facebook'), home_auth_at_provider_path(provider: :facebook) %><br />
    <% end %>
</div>
