<div id="notice_place"></div>
<% if notice %>
    <div class="alert alert-info alert-dismissible" id="alert-loc" role="alert">
  	<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<%= notice %>
    </div>
<% end %>
<% if flash[:alert] %>
    <div class="alert alert-info alert-dismissible" id="alert-loc" role="alert">
  	    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	      <%= flash[:alert] %>
    </div>
<% end %>
<%= yield %>
