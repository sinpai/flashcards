<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<h1>Мои карточки</h1>
<section class="all-cards">
    <table class="table table-striped">
        <thead>
	          <tr>
	              <th>#</th>
	              <th>Текст</th>
	              <th>Перевод</th>
	              <th>Дата проверки</th>
	              <th>Действия</th>
	          </tr>
        </thead>
        <tbody>
	          <% @user.cards.each_with_index do |card, index| %>
	              <tr>
		                <th scope="row"><%= index+1 %></th>
		                <td><%= link_to card.original_text, edit_card_path(card) %></td>
		                <td><%= card.translated_text %></td>
		                <td><%= card.review_date.nil? ? '-' : card.review_date.to_time.strftime("%d/%m/%Y") %></td>
		                <td><%= link_to 'Удалить', card_path(card), method: :delete %></td>
	              </tr>
	          <% end %>
        </tbody>
    </table>
</section>
